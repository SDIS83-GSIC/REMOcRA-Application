{
  "realm": "remocra",
  "clients": [
    {
      "clientId": "remocra",
      "enabled": true,
      "protocol": "openid-connect",
      "clientAuthenticatorType": "client-secret",
      "secret": "$(env:CLIENT_SECRET)",
      "publicClient": false,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "baseUrl": "$(env:REMOCRA_URL)",
      "redirectUris": [
        "$(env:REMOCRA_URL)/callback", # pour l'authentification,
        "$(env:REMOCRA_URL)/"          # pour la redirection apr√®s execute-actions-email
      ]
    },
    {
      "clientId": "remocra-mobile",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "fr.sdis83.remocra.mobile:/login"
      ],
      "attributes": {
        "post.logout.redirect.uris": "fr.sdis83.remocra.mobile:/logout"
      }
    }
  ],
  "users": [
    {
      "username": "service-account-remocra",
      "enabled": true,
      "serviceAccountClientId": "remocra",
      "clientRoles": {
        "realm-management": [
          "manage-users",
          "manage-clients"
        ]
      }
    }
  ]
}
