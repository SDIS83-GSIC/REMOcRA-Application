{
  "realm": "remocra",
  "enabled": true,
  "roles": {
    "realm": [
      {
        "name": "inactif",
        "description": "Utilisateur inactif",
        "composite": false,
        "clientRole": false,
        "attributes": {}
      }
    ]
  },
  "clients": [
    {
      "enabled": true,
      "protocol": "openid-connect",
      "clientId": "remocra",
      "secret": "$(env:CLIENT_SECRET)",
      "clientAuthenticatorType": "client-secret",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "baseUrl": "$(env:REMOCRA_URL)",
      "redirectUris": [
        "$(env:REMOCRA_URL)/callback",
        "$(env:REMOCRA_URL)/*"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "groups",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "service-account-remocra",
      "enabled": true,
      "serviceAccountClientId": "remocra",
      "realmRoles": [
        "default-roles-remocra"
      ],
      "clientRoles": {
        "realm-management": [
          "manage-users"
        ]
      }
    }
  ]
}
