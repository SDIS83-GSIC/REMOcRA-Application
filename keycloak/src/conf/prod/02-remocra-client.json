{
  "realm": "remocra",
  "clients": [
    {
      "clientId": "remocra",
      "enabled": true,
      "protocol": "openid-connect",
      "clientAuthenticatorType": "client-secret",
      "secret": "$(env:CLIENT_SECRET)",
      "publicClient": false,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "baseUrl": "$(env:REMOCRA_URL)",
      "redirectUris": [
        "$(env:REMOCRA_URL)/callback", # pour l'authentification,
        "$(env:REMOCRA_URL)/"          # pour la redirection apr√®s execute-actions-email
      ]
    }
  ],
  "users": [
    {
      "username": "service-account-remocra",
      "enabled": true,
      "serviceAccountClientId": "remocra",
      "clientRoles": {
        "realm-management": [
          "manage-users"
        ]
      }
    }
  ]
}
